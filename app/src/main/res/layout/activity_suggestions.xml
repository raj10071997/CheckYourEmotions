<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.dhanraj.emotionapi.SuggestionsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="These are the suggestions to make your mood better :"
                android:id="@+id/moodbetter"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="first suggestion"
                android:id="@+id/firstsug"
                android:layout_below="@+id/moodbetter"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="monospace"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="second suggestion"
                android:id="@+id/secondsug"
                android:layout_below="@+id/firstsug"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="monospace"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="third suggestion"
                android:id="@+id/thirdsug"
                android:layout_below="@+id/secondsug"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="monospace"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fourth suggestion"
                android:id="@+id/fourrthsug"
                android:layout_below="@+id/thirdsug"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:typeface="monospace"
                />


        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tryagain"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
